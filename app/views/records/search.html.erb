<%= form_with(url: search_record_path, local: true, method: :get) do |form| %>
  <%= form.text_field :keyword, placeholder: "日付を検索する" %>
  <%= form.submit "検索"%>
<% end %>

<table>
 <th>名前</th>
 <th>日付</th>
 <th>出勤</th>
 <th>退勤</th>
 <th>休憩</th>
 <th>編集</th>
 <th>削除</th>
<% if @records != nil%>
    

  <% @records.each do |record| %>
    <tr>
    <td>
      <%= record.user.name%>
    </td>
    <td>
      <%= record.day%>
    </td>
    <td >
    <%# レコードに出勤データがある場合表示 %>
      <%if record.begin != nil %>
        <%= record.begin.strftime("%H:%M") %>
      <% end %>
    </td>
    <%# レコードに退勤データがある場合表示 %>
    <td>
      <%if record.finish != nil %>
        <%= record.finish.strftime("%H:%M") %>
      <% end %>
    </td>
    <td>
      <%if record.break != nil %>
        <%= record.break %>
      <% end %>
    </td>
    <td>
    <%= link_to "編集", edit_record_path(record.id)%>
    </td>
    <td>
    <%= link_to "削除", record_path(record.id), method: :delete%>
    </td>
   </tr>
  <% end %>
<% end %>
</table>
